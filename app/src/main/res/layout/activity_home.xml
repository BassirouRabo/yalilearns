<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="yalilearns.apkode.net.yalilearns.Home"
    android:background="@color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="startCivicLeadership"
                android:textColor="@android:color/white"
                android:text="Civic Leadershop"/>

            <Button
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="startLeadership"
                android:text="Leadership"
                android:textColor="@android:color/white" />


            <Button
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="startBusinessEntrepreneurship"
                android:text="Business Entrepreneurship"
                android:textColor="@android:color/white" />

            <Button
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="startPublicManagement"
                android:text="Public Management"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
